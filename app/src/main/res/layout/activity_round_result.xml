<?xml version="1.0" encoding="utf-8"?>
<!-- Round result screen: shows both cards, result text, score and Next Round button -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    android:background="@drawable/background_paper">

    <!-- Centered vertical column so this screen lines up with the game screen layout -->
    <LinearLayout
        android:id="@+id/content_container_result"
        android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- Screen title -->
    <TextView
        android:id="@+id/tv_round_title"
        style="@style/Text.AnimalBattle.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round Result"
        android:layout_marginBottom="12dp" />

    <!-- Player card container (same size as in the game screen) -->
    <FrameLayout
        android:id="@+id/player_card_container_result"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/round_mask"
        android:clipToOutline="true">

        <!-- Player card background image -->
        <ImageView
            android:id="@+id/player_card_bg_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/player_bg_fantasy"
            android:alpha="1.0" />

        <!-- Player card content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_player_result"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_player_name_result"
                style="@style/Text.AnimalBattle.CardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Card: Tiger"
                android:layout_marginTop="2dp"
                android:shadowColor="#CC000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="4" />

            <TextView
                android:id="@+id/tv_player_action_result"
                style="@style/Text.AnimalBattle.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATTACK âš”ï¸"
                android:shadowColor="#CC000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="4" />

            <TextView
                android:id="@+id/tv_player_strength_result"
                style="@style/Text.AnimalBattle.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strength: 80"
                android:shadowColor="#CC000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="4" />
        </LinearLayout>

    </FrameLayout>

    <!-- VS label between the two cards -->
    <TextView
        android:id="@+id/tv_vs_result"
        style="@style/Text.AnimalBattle.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VS"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- AI card container (mirrors the player card layout) -->
    <FrameLayout
        android:id="@+id/ai_card_container_result"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/round_mask"
        android:clipToOutline="true">

        <!-- AI card background image -->
        <ImageView
            android:id="@+id/ai_card_bg_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/player_bg_fantasy"
            android:alpha="1.0" />

        <!-- AI card content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_ai_result"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_ai_name_result"
                style="@style/Text.AnimalBattle.CardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Card: Goat"
                android:layout_marginTop="2dp"
                android:shadowColor="#CC000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="4" />

            <TextView
                android:id="@+id/tv_ai_action_result"
                style="@style/Text.AnimalBattle.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEFEND ðŸ›¡ï¸"
                android:shadowColor="#CC000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="4" />

            <TextView
                android:id="@+id/tv_ai_strength_result"
                style="@style/Text.AnimalBattle.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strength: 70"
                android:shadowColor="#CC000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="4" />
        </LinearLayout>

    </FrameLayout>

    <!-- Round result message -->
    <TextView
        android:id="@+id/tv_round_result"
        style="@style/Text.AnimalBattle.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You won the round! ðŸŽ‰"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp" />

    <!-- Match score -->
    <TextView
        android:id="@+id/tv_score_result"
        style="@style/Text.AnimalBattle.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: Player 0 vs AI 0"
        android:layout_marginBottom="16dp" />

    <!-- Next round button -->
    <Button
        android:id="@+id/button_next_round"
        style="@style/Button.AnimalBattle.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Round" />

</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


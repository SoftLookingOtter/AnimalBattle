<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Rad med kort + VS -->
        <LinearLayout
            android:id="@+id/cards_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Player-kort -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/iv_player_result"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_player_card_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Card: Rabbit"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <!-- NY: action-text under spelarens kort -->
                <TextView
                    android:id="@+id/tv_player_action_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ATTACK âš”ï¸"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tv_player_strength_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strength: 0" />
            </LinearLayout>

            <!-- VS i mitten -->
            <TextView
                android:id="@+id/tv_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="8dp"
                android:gravity="center_vertical" />

            <!-- AI-kort -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/iv_ai_result"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_ai_card_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Card: Goat"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <!-- NY: action-text under AI:s kort -->
                <TextView
                    android:id="@+id/tv_ai_action_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEFEND ðŸ›¡ï¸"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tv_ai_strength_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strength: 0" />
            </LinearLayout>
        </LinearLayout>

        <!-- Result-meddelande -->
        <TextView
            android:id="@+id/tv_round_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You lost the round! ðŸ˜­"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Beskrivning av drag -->

        <!-- PoÃ¤ng -->
        <TextView
            android:id="@+id/tv_player_score_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Score: 0" />

        <TextView
            android:id="@+id/tv_ai_score_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Score: 0"
            android:layout_marginBottom="24dp" />

        <!-- Next-knapp -->
        <Button
            android:id="@+id/button_next_round"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Next" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

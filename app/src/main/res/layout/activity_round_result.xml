
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_round_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round Result"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/card_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_round_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_player_result"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_player_card_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Card"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_ai_result"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_ai_card_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Card"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_round_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You attacked the lion!"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_round_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You dealt 30 damage!"
        android:background="@android:color/holo_blue_light"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_round_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/score_row_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_round_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_player_score_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your Score: 0" />

        <TextView
            android:id="@+id/tv_ai_score_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AI Score: 0"
            android:gravity="end" />
    </LinearLayout>

    <Button
        android:id="@+id/button_next_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Round"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/score_row_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

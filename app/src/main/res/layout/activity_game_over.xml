<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_over_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background image (swap win/lose in Kotlin) -->
    <ImageView
        android:id="@+id/iv_game_over_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_win"
        android:contentDescription="@null" />

    <!-- Semi-transparent panel -->
    <LinearLayout
        android:id="@+id/game_over_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_game_over_panel"
        android:padding="24dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Main win/lose title -->
        <TextView
            android:id="@+id/tv_game_over_result"
            style="@style/Text.AnimalBattle.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:maxLines="1"
            android:includeFontPadding="false" />

        <!-- Sub text -->
        <TextView
            android:id="@+id/tv_game_over_sub"
            style="@style/Text.AnimalBattle.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¾ Thanks for playing ðŸ¾"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Play Again button -->
        <Button
            android:id="@+id/button_play_again"
            style="@style/Button.AnimalBattle.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”  Play Again"
            android:layout_marginBottom="12dp" />

        <!-- Back to menu -->
        <Button
            android:id="@+id/button_back_to_menu"
            style="@style/Button.AnimalBattle.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ¡  Back to Menu" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_over_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/background_paper">

    <!-- Center panel -->
    <LinearLayout
        android:id="@+id/game_over_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_game_over_panel"
        android:padding="24dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_game_over_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Win/Loose"
            android:textStyle="bold"
            android:textSize="36sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp"
            android:includeFontPadding="false" />


        <TextView
            android:id="@+id/tv_game_over_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¾ Thanks for playing ðŸ¾"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/button_play_again"
            style="@style/Button.AnimalBattle.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”  Play Again"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/button_back_to_menu"
            style="@style/Button.AnimalBattle.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ¡  Back to Menu"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme for the app -->
    <style name="Base.Theme.AnimalBattle" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- All default TextViews get white text -->
        <item name="android:textViewStyle">@style/Widget.AnimalBattle.TextView</item>
    </style>

    <!-- App main theme -->
    <style name="Theme.AnimalBattle" parent="Base.Theme.AnimalBattle" />

    <!-- ====== GLOBAL TEXTVIEW ====== -->
    <style name="Widget.AnimalBattle.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- ====== TEXT STYLES ====== -->

    <!-- Big titles: Battle Arena, Round Result, Game Over -->
    <style name="Text.AnimalBattle.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Card titles: "Your Card: Tiger", "AI Card: Goat", "AI Card" placeholder -->
    <style name="Text.AnimalBattle.CardTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Body text: strength, actions, score, subtitles -->
    <style name="Text.AnimalBattle.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- ====== BUTTON STYLES ====== -->

    <!-- Shared base button for the game -->
    <style name="Button.AnimalBattle.Base" parent="Widget.Material3.Button">
        <!-- Same text style for all buttons -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>

        <!-- Make all buttons use the same width -->
        <item name="android:minWidth">240dp</item>
        <item name="android:maxWidth">240dp</item>
        <item name="android:gravity">center</item>

        <!-- Padding -->
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <!-- Menu buttons, Next Round, Play Again, Back to Menu -->
    <style name="Button.AnimalBattle.Primary" parent="Button.AnimalBattle.Base">
        <!-- Background color (defined in colors.xml) -->
        <item name="backgroundTint">@color/ab_button_primary</item>
        <!-- Dark green text color (#2A3B36) -->
        <item name="android:textColor">@color/ab_button_primary_text</item>
    </style>

    <!-- ATTACK -->
    <style name="Button.AnimalBattle.Attack" parent="Button.AnimalBattle.Base">
        <!-- Green background -->
        <item name="backgroundTint">@color/ab_button_attack</item>
        <!-- White, bold text -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- DEFEND -->
    <style name="Button.AnimalBattle.Defend" parent="Button.AnimalBattle.Base">
        <!-- Darker teal background -->
        <item name="backgroundTint">@color/ab_button_defend</item>
        <!-- White, bold text -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>


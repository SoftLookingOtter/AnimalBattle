<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- I wanted the game over panel to be slightly transparent so the background image shows through. -->
    <solid android:color="#88FDF7F0" /> <!-- AA = ~53% opacity -->

    <corners android:radius="24dp" />

    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />

    <stroke
        android:width="1dp"
        android:color="#55FFFFFF" /> <!-- soft, subtle border -->
</shape>

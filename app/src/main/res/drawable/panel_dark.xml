<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Dark semi-transparent background -->
    <solid android:color="#AA1A1A1A" />
    <!-- AA = ~66% opacity -->

    <!-- Rounded corners -->
    <corners android:radius="24dp" />

    <!-- Inner padding -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />

    <!-- Subtle soft border -->
    <stroke
        android:width="1dp"
        android:color="#33FFFFFF" />
</shape>
